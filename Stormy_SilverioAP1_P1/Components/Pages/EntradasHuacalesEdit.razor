@page "/EntradasHuacales/Edit/{IdEntrada:int}"
@inject IToastService toastService
@rendermode InteractiveServer
@inject EntradasHuacalesService entradasHuacalesService
@inject NavigationManager navigationManager
<PageTitle>Editar Entrada de Huacales</PageTitle>
<EditForm Model="EntradasHuacales" OnValidSubmit="Modificar">
    <DataAnnotationsValidator />

    <div class="container">
        <div class="card shadow-lg">
            <div class="card-header">
                <h5 class="card-title">Editar Huacal</h5>
            </div>
            @*Inputs*@
            <div class="card-body">
                <div>
                    <label class="form-label">Fecha</label>
                    <InputDate @bind-Value="EntradasHuacales.Fecha" class="form-control"></InputDate>
                    <ValidationMessage For="() => EntradasHuacales.Fecha" />
                </div>
                <div>
                    <label class="form-label">Nombre Cliente</label>
                    <InputText @bind-Value="EntradasHuacales.NombreCliente" class="form-control"></InputText>
                    <ValidationMessage For="() => EntradasHuacales.NombreCliente" />
                </div>
                <div>
                    <label class="form-label">Cantidad</label>
                    <InputNumber @bind-Value="EntradasHuacales.Cantidad" class="form-control"></InputNumber>
                    <ValidationMessage For="() => EntradasHuacales.Cantidad" />
                </div>
                <div>
                    <label class="form-label">Precio</label>
                    <InputNumber @bind-Value="EntradasHuacales.Precio" class="form-control"></InputNumber>
                    <ValidationMessage For="() => EntradasHuacales.Precio" />
                </div>
            </div>

            @*Botones*@
            <div class="card-footer d-flex justify-content-center gap-3">
                <a href="EntradasHuacales/Index" class="d-flex gap-2 btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i>
                    <span>Volver</span>
                </a>
                <button class="btn btn-outline-primary bi bi-save">Guardar</button>
                <button type="button" class="btn btn-outline-danger bi bi-trash" @onclick="Eliminar">Eliminar</button>
            </div>
        </div>
    </div>
</EditForm>


@code {
    [Parameter]
    public int IdEntrada { get; set; }

    public EntradasHuacales EntradasHuacales = new EntradasHuacales();

    protected override async Task OnInitializedAsync()
    {
        EntradasHuacales = await entradasHuacalesService.Buscar(IdEntrada);
    }
    private async Task Modificar()
    {
        var modificado = await entradasHuacalesService.Guardar(EntradasHuacales);
        if (modificado)
        {
            toastService.ShowSuccess("Huacal Modificado Correctamente");
            navigationManager.NavigateTo("EntradasHuacales/Index");
        }
        else
        {
            toastService.ShowSuccess("Huacal No Pudo Ser Modificado Correctamente");
        }
    }
    private async Task Eliminar()
    {
        var eliminado = await entradasHuacalesService.Eliminar(IdEntrada);
        if (eliminado)
        {
            toastService.ShowSuccess("Huacal Eliminado Correctamente");
            navigationManager.NavigateTo("EntradasHuacales/Index");
        }
        else
        {
            toastService.ShowSuccess("Huacal No Pudo Ser Eliminado Correctamente");
        }
    }
}